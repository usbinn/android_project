<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CookingTimerActivity">

    <TextView
        android:id="@+id/current_step_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?attr/colorPrimary"
        android:textColor="?attr/colorOnPrimary"
        android:textAppearance="?attr/textAppearanceHeadline5"
        tools:text="[3단계] 양념장 넣고 끓이기" />

    <TextView
        android:id="@+id/current_step_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="48dp"
        android:textSize="80sp"
        android:textStyle="bold"
        tools:text="14:59" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="전체 진행 상황"
        android:textAppearance="?attr/textAppearanceHeadline6"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cooking_steps_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/cooking_step_list_item"/> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="16dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_prev_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이전"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_pause_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="일시정지" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_next_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음"/>
</LinearLayout>

</LinearLayout>